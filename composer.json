{
    "name": "omegacode/jwt-secured-api-skeleton",
    "type": "project",
    "description": "This is a simple jwt based API skeleton to kick start your API development.",
    "homepage": "https://github.com/0m3gaC0d3/jwt-secured-api-skeleton",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "omegacode/jwt-secured-api-core": "0.6.*",
        "omegacode/jwt-secured-api-graphql": "0.2.*",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "0.12.*",
        "phpmd/phpmd": "^2.8",
        "kint-php/kint": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "process-timeout": 0
    },
    "scripts": {
        "test": [
            "./.ci/scripts/ciRunner.sh -s unit"
        ],
        "lint": [
            "./.ci/scripts/ciRunner.sh -s lint"
        ],
        "php-fix": [
            "./.ci/scripts/ciRunner.sh -s php-fix"
        ],
        "build": [
            "./.ci/scripts/ciRunner.sh -s build"
        ],
        "quality": [
            "./.ci/scripts/ciRunner.sh -s quality"
        ],
        "post-install-cmd": [
            "./bin/install"
        ]
    },
    "extra": {
        "jwt-secured-api": {
            "conf-dir": "conf"
        }
    }
}
